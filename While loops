//while loop//
#include<stdio.h>
int main()
{int input = 0;
int sum = 0;
while (input != -1)
{ sum += input;
printf("Please enter the number \n");
scanf("%i", &input);
}
printf("The sum is %i",sum);
return 0;
}

________________________________________

//do while loop//
#include<stdio.h>
int main()
{
int i=2;
do
{printf("%i\n", i);
i+=2;
}
while (i<=50);
return 0;
}

_________________________________________

//for loop//
#include<stdio.h>
int main()
{for (int i=1; i<50; i+=2)
printf("%i\t", i);
return 0;
}

